<%- include('layouts/header.ejs') %>
  <%- include('layouts/error-message.ejs') %>
    <div class="row">
      <div class="col">
      </div>
      <div class="col">
        <br>
        <h3>Update singer <i>
            <%=singer.name%>
          </i>
        </h3>
        <br>

        <form action="/update" method="post">
          <input type="hidden" class="form-control" name="txtId" value="<%=singer._id%>">
          <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" name="txtName" value="<%=singer.name%>">
          </div>
          <div class="mb-3">
            <label class="form-label">Avatar</label>
            <input type="text" class="form-control" name="txtAvatar" value="<%=singer.avatar%>">
          </div>
          <div class="mb-3">
            <label class="form-label">Link</label>
            <input type="text" class="form-control" name="txtLink" value="<%=singer.link%>">
          </div>
          <button type="submit" class="btn btn-warning">Update</button>
        </form>
      </div>
      <div class="col">
      </div>
    </div>